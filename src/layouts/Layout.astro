---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ’«</text></svg>"></link>
		<link rel="apple-touch-icon" href="touch-icon.jpg">
		<meta property="og:title" content={title} />
		<meta property="og:description" content="How big of a fan are you really? Test your fandom!">
		<meta property="og:image" content="/og-img.jpg" />

		<meta name="generator" content={Astro.generator} />
