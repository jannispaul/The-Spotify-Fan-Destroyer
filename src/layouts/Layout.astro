---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!--Favicon -->
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>🤘</text></svg>"></link> 
		<link rel="apple-touch-icon" href="touch-icon.jpg">
		<!-- Theme color -->
		<meta name="theme-color" content="#181818" />

		<!--Open Graph Data -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="How big of a fan are you really? Test your fandom!">
		<meta property="og:image" content="/og-img.jpg" />

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- <script src="/app.js" defer is:inline></script> -->
		<script>
			import "../js/app.js";
		</script>
		<script defer src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	/* General styles*/
	*{
		padding: 0;
		margin:0;
	}
	
	:root {
		--accent: 124, 58, 237;
		--white:#fff;
		--primary: #F5B818;
		--primary-dimmed: #DFA716;
		--black: #181818;
		--black-hover: #232323;
		--black-selected: #272727;
		--gray-dark: #5F5F5F;
		--spotify: #00DA5A;
		--side-padding: 6%;
		--vertical-padding: 10vmin;
		--mw-small: 20rem;
	}
	html {
		font-family: system-ui, Arial, Helvetica, sans-serif;
		min-height: 100vh;
		text-align: center;
	}
	
	body,h1,h2,h3,p,a, label{
		color: var(--white);
	}
	body{
		position: relative;
		min-height: 100vh;
	}
	body:after{
		content: "";
		z-index: -1;
		position: fixed;
		height: 100vh;
		width: 100vw;
		top:0;
		left: 0;
		background: radial-gradient(50% 50% at 50% 50%, #1D1D1D 0%, #0B0B0B 100%) 100%;
	}
	
	h1{
		font-size: 10vw;
		margin-bottom: 1rem;
		font-weight: 800;
		line-height: 1.1;
	}
	h2{
		font-size: 2rem;
	}
	a, button, input, p {
		font-size: 1rem;
	}
	p {
		line-height: 1.5;
	}
	
	.intro-p{
		max-width: 34ch;
		margin: 0 auto 2.5rem;
	}
	
	/* Buttons */
	.button,	
	button{
		font-size: 1rem;
		font-weight: 700;
		height: 3rem;
		padding: 0 1.5rem;
		border-radius: 0.375rem;
		border: none;
		color: #0D0D0D;
		display: flex;
		gap: 0.75rem;
		align-items: center;
		background: var(--primary);
		cursor: pointer;
		max-width: var(--mw-small);
		display: flex;
		justify-content: center;
		width: 100%;
max-width: var(--mw-small);
		text-decoration: none;
	}
	button:not(.small){

	}

	/* button.selector:not(.spotify):not(:disabled):not(.play-button):active{ */
	button.selector:active{
		border: 2px solid var(--primary);
		background: var(--black-selected);
	}
	button:disabled{
		background: #5F5F5F;
		cursor: not-allowed;
	}
	/* button:hover:not(:disabled):not(.social-button):not(.selector){
		background: var(--primary-dimmed);
	} */
	/* button:active:not(.spotify):not(.social-button):not(:disabled){
		background: var(--primary-dimmed);
	} */
	.icon{
		width: 1rem;
		height: 1rem;
	}
	.icon.large {
		width: 1.5rem;
		height: 1.5rem;
	}
	button.selector{
		background: var(--black);
		border: 1px solid #313131;
		border-radius: 0.375rem;
		display: flex;
		color: white;
		height: auto;
		transition: background 200ms ease, border 200ms ease;
		overflow: hidden;
		
	}
	
	button.selector:hover{
		background: var(--black-hover);
		border-color: #949494;
	}
	button.selector:active,
	button.selector:focus{
		background: var(--black-selected);
		border-color: var(--primary);
		/* outline: -webkit-focus-ring-color auto 0px!important; */
		outline: none;
	}

	
	
	
	.correct::after{
		content: "✅";
	}
	.incorrect::after{
		content: "❌";
	}
	/* emoji heading */
	.header-emoji {
		font-size: clamp(1.5rem, 9vw, 5rem);;
	}
	
	@media (min-width: 768px){
		a, button, input, p {
			font-size: 1.25rem;
		}
		h1{
			font-size: 6rem;
			font-size: clamp(3rem, 10vh, 6rem);
		}
		.header-emoji {
			font-size: 3rem;
		}
		.button,
		button {
			font-size: 1.25rem;
			height: 3.5rem;
			width: auto;
		}
		button.primary:not(:disabled):active{
			background: var(--primary);
		}
		.icon.large{
			width: 2rem;
			height: 2rem;
		}

		button.selector{
			flex-direction: column;
			padding: 2rem;
			height: auto;
		}
	

		/* Headline rotation */
		h1{
			--main-rotation: 2deg;
			--sub-rotation: -3deg;
			transform: rotateZ(var(--main-rotation));
			transition: transform 200ms cubic-bezier(0.34, 1.56, 0.64, 1);
		}
		h1>span:last-of-type{
			display: inline-block;
			transform: rotateZ(var(--sub-rotation));
		}

		
	}
</style>
