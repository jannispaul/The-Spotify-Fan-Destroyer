<style is:global>
	*{
		padding: 0;
		margin:0;
	}
	
	:root {
		--accent: 124, 58, 237;
		--white:#fff;
		--primary: #F5B818;
		--primary-dimmed: #DFA716;
		--black: #181818;
		--black-hover: #232323;
		--black-selected: #272727;
	}
	html {
		font-family: system-ui, Arial, Helvetica, sans-serif;
		min-height: 100vh;
		text-align: center;
	}
	
	body,h1,h2,h3,p,a, label{
		color: var(--white);
	}
	body{
		position: relative;
	}
	body:after{
		content: "";
		z-index: -1;
		position: fixed;
		height: 100vh;
		width: 100vw;
		top:0;
		left: 0;
		background: radial-gradient(50% 50% at 50% 50%, #1D1D1D 0%, #0B0B0B 100%) 100%;
	}
	main{
		max-width: 60rem;
		margin: auto;
		min-height: 100vh;
		display: flex;
		align-items: center;
	}
	main > div{
		width: 100%;
	}
	h1{
		font-size: 2.5rem;
		margin-bottom: 4rem;
	}
	h2{
		font-size: 2rem;
	}
	a, button, input, p {
		font-size: 1rem;
	}

	.artist-button > img {
		pointer-events: none;
	}


	
	button{
		font-size: 1rem;
		font-weight: 700;
		height: 3rem;
		padding: 0 1.5rem;
		border-radius: 0.375rem;
		border: none;
		color: #0D0D0D;
		display: flex;
		gap: 0.75rem;
		align-items: center;
		background: var(--primary);
		cursor: pointer;
	}
	button:disabled{
		background: #5F5F5F;
		cursor: not-allowed;
	}
	button:hover:not(:disabled){
		background: var(--primary-dimmed);
	}
	.icon{
		width: 1rem;
		height: 1rem;
	}
	.icon.large {
		width: 1.5rem;
		height: 1.5rem;
	}
	button.selector{
		background: var(--black);
		border: 1px solid #313131;
		border-radius: 0.375rem;
		display: flex;
		color: white;
		height: auto;
		transition: background 200ms ease, border 200ms ease;

	}

	button.selector:hover{
		background: var(--black-hover);
		border-color: #949494;
	}
	button.selector:active,
	button.selector:focus{
		background: var(--black-selected);
		border-color: var(--primary);
		outline: -webkit-focus-ring-color auto 0px!important;
	}
	button.artist-button img{
		width: 3rem;
		height: 3rem;
		object-fit: cover;
		border-radius: 99rem;

	}
	.song-card::after{
		position: absolute;
		font-size: 3rem;
		top: -1rem;
		right: -1rem;
		transform: rotateZ(10deg);
	}
	.correct::after{
		content: "âœ…";
	}
	.incorrect::after{
		content: "âŒ";
	}

	@media (min-width: 768px){
		a, button, input, p {
			font-size: 1.25rem;
		}
		h1{
			font-size: 6rem;
			transform: rotateZ(-1deg);

		}
		h1>span:last-of-type{
			display: inline-block;
			transform: rotateZ(2deg);
		}
		button {
			font-size: 1.25rem;
			height: 3.5rem;
		}
		.icon.large{
			width: 2rem;
			height: 2rem;
		}

		button.selector{
			flex-direction: column;
			padding: 2rem;
			height: auto;
		}
	 	button.artist-button img{
			width: 4rem;
			height: 4rem;
		}
	}
</style>
