---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ’«</text></svg>"></link>
		<link rel="apple-touch-icon" href="touch-icon.jpg">
		<meta property="og:title" content={title} />
		<meta property="og:description" content="How big of a fan are you really? Test your fandom!">
		<meta property="og:image" content="/og-img.jpg" />

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="/app.js" defer is:inline></script>

	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--white:#fff;
		--primary: #F5B818;
	}
	html {
		font-family: system-ui, Arial, Helvetica, sans-serif;
		background: radial-gradient(50% 50% at 50% 50%, #1D1D1D 0%, #0B0B0B 100%) 100%;
		min-height: 100vh;
		text-align: center;
	}
	body,h1,h2,h3,p,a, label{
		color: var(--white);
	}
	h1{
		font-size: 2.5rem;
	}
	h2{
		font-size: 2rem;
	}

	.artist-button > img {
		pointer-events: none;
	}

	button{
		font-size: 1rem;
		font-weight: 700;
		padding: 1rem 1.5rem;
		border-radius: 0.375rem;
		border: none;
		color: #0D0D0D;
		display: flex;
		gap: 0.75rem;
		align-items: center;
		background: var(--primary);
		cursor: pointer;
	}
	.icon{
		width: 1rem;
		height: 1rem;
	}
	.icon.large {
		width: 1.5rem;
		height: 1.5rem;
	}

	button.artist-button{
		background: #181818;
		border: 1px solid #313131;
		border-radius: 0.375rem;
		display: flex;
		color: white;
	}
	button.artist-button:hover{
		background: #232323;
		border-color: #949494;
	}
	button.artist-button img{
		width: 3rem;
		height: 3rem;
		object-fit: cover;
		border-radius: 99rem;

	}
	@media (min-width: 768px){
		h1{
			font-size: 6rem;
		}
		button {
			font-size: 1.25rem;
		}
		.icon.large{
			width: 2rem;
			height: 2rem;
		}

		button.artist-button{
			flex-direction: column;
			padding: 2rem;
		}
	 	button.artist-button img{
			width: 4rem;
			height: 4rem;
		}
	}
</style>
