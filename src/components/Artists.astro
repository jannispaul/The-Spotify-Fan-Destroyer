<style>
	.artist-section{
		display: none;
		padding: var(--vertical-padding) var(--side-padding);
	}
	.artist-wrapper{
		display: flex;
		flex-direction: column;
		align-items: center;
		/* padding-top: 4rem; */
	}
	.artists-container{
		display: grid;
		gap: 0.75rem;
		width: 100%;
		/* position: relative; */
		padding-bottom: 10vw;
		overflow: scroll;
		max-height: 100%;
		max-width: var(--mw-small);
		align-items: stretch;
	}
	
	.artists-container::after{
		content: " ";
		position: fixed;
		z-index: 1;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 10rem;
		background: linear-gradient(rgba(0,0,0,0), rgba(10,10,10,1));
		pointer-events: none;
	}
	
	input.search{
		height: 3.5rem;
		display: flex;
		align-items: center;
		background: var(--black);
		color: var(--white);
		padding: 0 1rem;
		border: 2px solid var(--black-hover);
		border-radius: 0.375rem;
		width: 35%;
		width: calc(100% - (2 * var(--side-padding)));
		max-width: calc(var(--mw-small) - 2rem);
		margin-bottom: 1rem;
		
	}
	input.search:focus{
		/* outline: -webkit-focus-ring-color auto 0px!important; */
		outline: none;
		/* outline: 2px auto red; */
		border: 2px solid var(--primary);
		/* box-shadow: 2px 2px 2px red; */
	}
	.subline{
		font-size: 1.25rem;
		margin-bottom: 1.5rem;
		font-weight: 700;
	}
	
	@media (min-width: 768px){
		.artist-section {
		}
		.artists-container{
			grid-template-columns: repeat( auto-fit, minmax(250px, 1fr) );
			grid-template-rows: 1fr;
			max-width: none;
		}
		.artist-wrapper{
			justify-items: stretch;
		}		
		input.search{
			margin-bottom: 2.5rem;
			text-align: center;
		}
	}
	
	</style>

<style is:global>
button.artist-button {
	height: 4rem;
	padding: 0;
	justify-content: flex-start;
	text-align: left;
}
button.artist-button >.artist-image{
	width: 4rem;
	height: 4rem;
	object-fit: cover;
	background: rgba(255,255,255,0.05);
	display: flex;
	align-items: center;
	justify-content: center;
	pointer-events: none;
}
@media (min-width: 768px){
	
	button.artist-button {
		min-height: fit-content;
		height: 100%;
		padding: 2rem;
		text-align: center;
		max-width: 100%;
	}
	button.artist-button >.artist-image{
			border-radius: 99rem;
		}
}
</style>