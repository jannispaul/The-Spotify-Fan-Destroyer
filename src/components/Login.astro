<script>
//@ts-nocheck
// Cover Animation	
// Only run on desktop
if (window.matchMedia('(min-width: 768px)').matches) {
	let mouseOverContainer = document.querySelector("body");
	let animated = document.querySelectorAll(".emoji");

	function transforms(x, y, el) {
		let rotation= y/window.innerHeight * 20
		let xShift= x/window.innerWidth * 100
		let yShift= y/window.innerHeight * 100
		return "rotateZ("+ rotation + "deg) translateX(" + xShift + "%) translateY(" + yShift + "%)";
	};

	function transformElement(el, x, y) {
		el.style.transform  = transforms(x, y, el);
	}


	mouseOverContainer.onmousemove = function(e) {
		let x = e.clientX;
		let y = e.clientY;
		
		window.requestAnimationFrame(function(){
			transformElement(animated[0], -0.5*x,0.5*y);
			transformElement(animated[1], -x,y);
			transformElement(animated[2], 2*x,-y);
			transformElement(animated[3], 2*y, -0.8*x);
			transformElement(animated[4], x,0.5*y);
		});
	};
};
