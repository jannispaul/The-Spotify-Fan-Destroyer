<style>
	.quiz-section{
		display: none;
	}
	.quiz-wrapper{
		background: var(--black);
		border: 2px solid var(--black-selected);
		border-radius: 1.25rem;
	}

	.audio-container{
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-bottom: 3rem;
	}
	.answer-form{
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		width: 100%;
	}
	.song-name{
		display: block;
		max-width: 20ch;
		white-space: nowrap;
  		overflow: hidden;
  		text-overflow: ellipsis;
	}
	fieldset{
		border:none;
		width: 100%;
	}
	legend {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}
	.answers{
		display: grid;
		gap: 0.75rem;
	}
	.answer-wrapper{
		position: relative;

	}
	.answer-wrapper > input{
		position: absolute;
		width: 100%;
		height: 100%;
		opacity: 0;
		left: 0;
		top: 0;
		cursor: pointer;
	}
	label.selector{
		background: var(--black);
		border: 2px solid #313131;
		border-radius: 0.375rem;
		display: flex;
		color: white;
		transition: background 200ms ease, border 200ms ease;
		height: 3rem;
		align-items: center;
		justify-content: center;
	}
	
	input[type="radio"]:hover+label{
		background: var(--black-hover);
		border-color: #949494;
	}
	input[type="radio"]:checked+label ,
	label.selector:active,
	label.selector:focus{
		background: var(--black-selected);
		border-color: var(--primary);
		outline: -webkit-focus-ring-color auto 0px!important;
	}
	
	@media (min-width: 768px){
		.answers{
			grid-template-columns: 1fr 1fr;
		}
		label.selector{
			height: 4rem;
			font-size: 1.25rem;
			font-weight: 700;
		}
		.quiz-wrapper{
			padding: 3rem;
		}
	}
</style>
