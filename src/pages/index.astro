---
import Layout from '../layouts/Layout.astro';
import Login from '../components/Login.astro';
import Artists from "../components/Artists.astro" 
import Difficulty from '../components/Difficulty.astro';
import Quiz from '../components/Quiz.astro';
import Result from '../components/Result.astro';
import EndResult from '../components/EndResult.astro';
import ResetModal from '../components/ResetModal.astro';
import ErrorModal from '../components/ErrorModal.astro';
import Score from '../components/Score.astro';
---

<Layout title="The Spotify Fan Destroyer">
	<main>
		<Score></Score>
		<Login/>
		<Artists></Artists>
		<Difficulty></Difficulty>
		<Quiz></Quiz>
		<Result></Result>
		<EndResult></EndResult>
		<button class="close-button"><svg width="100%" height="100%" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M28.5 9.615L26.385 7.5L18 15.885L9.615 7.5L7.5 9.615L15.885 18L7.5 26.385L9.615 28.5L18 20.115L26.385 28.5L28.5 26.385L20.115 18L28.5 9.615Z" fill="white"/>
			</svg>
		</button>
		<ResetModal></ResetModal>	
		<ErrorModal></ErrorModal>
	</main>
</Layout>

<style>
	.close-button{
		display: none;
		height: 3rem;
		width: 3rem;
		border-radius: 0.375rem;
		place-content: center center;
		background: none;
		position: absolute;
		top: 1rem;
		right: 1rem;
		padding: 0.5rem;
	}
	.close-button > svg{
		pointer-events: none;
	}
	button.close-button:hover{
		background: var(--black-hover);
	}
	main{
		max-width: 60rem;
		margin: auto;
		min-height: 100vh;
		/* display: grid; */
		/* grid-template-rows: auto 1fr; */
		/* display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column; */
	}
	@media (min-width: 768px){
		.close-button{
			height: 4rem;
			width: 4rem;
			border-radius: 0.375rem;
			place-content: center center;
			top: 2rem;
			right: 2rem;
			padding: 1rem;
		}
	}
	
	/* main > div{
		width: 100%;
	} */

</style>
